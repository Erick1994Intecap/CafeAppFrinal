<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/linLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_start"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fortuna"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:textColor="@color/fuente"/>

            <TextView
                android:layout_below="@+id/linLayout1"
                android:id="@+id/tvTotalEstrellas"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15,000 Estrellas"
                android:paddingLeft="15dp"
                android:textSize="30sp"
                android:textColor="@color/fuente"/>
        </LinearLayout>


    </LinearLayout>



    <RelativeLayout
        android:background="@color/background"
        android:layout_marginTop="20dp"
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linLayout1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingTop="350dp"
            android:background="@color/background_navigation">

        </RelativeLayout>

        <ImageView
            android:id="@+id/imgCodUser"
            android:layout_width="350dp"
            android:layout_height="150dp"
           android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cod"/>

        <TextView
            android:id="@+id/tvSugerencia"
            android:layout_below="@+id/imgCodUser"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="270dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Antes de escanear dile a la barista que utilizaras tus estrellas como fortuna"
            android:textSize="15sp"
            android:textColor="@color/fuente"/>
    </RelativeLayout>
</RelativeLayout>